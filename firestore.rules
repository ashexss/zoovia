rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user belongs to the veterinary
    function belongsToVeterinary(veterinaryId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.veterinaryId == veterinaryId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Veterinary Context (New multi-tenant structure)
    match /veterinaries/{vetId} {
      allow read, update: if belongsToVeterinary(vetId);
      allow create, delete: if false;
      
      // All Subcollections under a veterinary (clients, pets, medicalRecords, appointments)
      match /{document=**} {
        allow read, write: if belongsToVeterinary(vetId);
      }
    }
    
    // For Collection Group Queries (required for pets/medicalRecords cross-client queries)
    match /{path=**}/pets/{petId} {
      allow read: if belongsToVeterinary(resource.data.veterinaryId);
    }
    match /{path=**}/medicalRecords/{recordId} {
      allow read: if belongsToVeterinary(resource.data.veterinaryId);
    }
  }
}
